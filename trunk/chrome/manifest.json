{
"manifest_version":			2,
"name":						"HTLiveSightDEV",
"version":					"0.6.1042",
"description":				"An Hattrick Live Match Viewer",
"icons":					{
								"16": "skin/16.png",
								"48": "skin/48.png",
								"128": "skin/128.png"
							},
"app":						{
							"launch":
								{
									"default_icon": "24.png",
									"default_title": "Launch HTLiveSight",
									"local_path": "content/htlivesight.html"
								}
							},
"homepage_url":				"http://htlivesight.sourceforge.net",
"incognito":				"spanning",
"minimum_chrome_version":	"13",
"options_page":				"content/settings.html",
"permissions":				[
								"tabs",
								"contextMenus",
								"notifications",
								"clipboardWrite",
								"*://chpp.hattrick.org/*"
							],
"web_accessible_resources":	[
								"content/img/foxball_32.png",
								"content/old_img/foxball_32.png",
								"content/themes/images/bg.png"
							],        
"update_url":				"https://htlivesight.c6.ixsecure.com/chromedev/updates.xml"
}
